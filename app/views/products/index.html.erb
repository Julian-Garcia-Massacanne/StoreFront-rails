<div class="container mx-auto px-4">

  <h2 class="text-xl font-semibold mb-4">Listado de Productos</h2>
  
  <!-- Tabla de productos -->
  <div class="bg-white shadow-md rounded my-6">
    <table class="table-auto w-full">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left">Nombre del Producto</th>
          <th class="py-3 px-6 text-right">Acciones</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @products.each do |product| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <!-- Nombre del producto -->
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <span class="font-medium"><%= product.name %></span>
            </td>
            
            <!-- Botones de acciones -->
            <td class="py-3 px-6 text-right">
              <div class="flex justify-end space-x-4">
                <%= link_to 'Editar', edit_product_path(product), 
                      class: "text-blue-500 hover:underline" %>
                <%= link_to 'Eliminar', product_path(product), 
                      method: :delete, 
                      data: { confirm: '¿Estás seguro de eliminar este producto?' }, 
                      class: "text-red-500 hover:underline" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @products.empty? %>
    <p class="text-center text-gray-500 mt-10">No hay productos disponibles.</p>
  <% end %>
</div>